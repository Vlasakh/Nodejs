<h1>Cart</h1>

<div id="card">
{{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Count</th>
        <th></th>
      </tr>
    </thead>
    <tbody>

      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{price}}</td>
        <td>{{count}}</td>
        <td>
          <form action="{{delPath}}" method="post">

          <button class="btn btm-small js-remove" data-id="{{id}}">Remove</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

  <form action="{{orderPath}}" method="post">
    <button type="submit" class="btn">Place order</button>
  </form>
{{else}}
  <p>Cart is empty</p>
{{/if}}
</div>
