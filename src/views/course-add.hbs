<h1>Add a course</h1>

<form action="add-course" method="post">
  <div class="input-field ">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Add course name"></span>
  </div>

  <div class="input-field ">
    <input id="price" name="price" type="text" class="validate" required min="1">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Add course price"></span>
  </div>

  <div class="input-field ">
    <input id="image" name="image" type="text" class="validate" required>
    <label for="image">Image url</label>
    <span class="helper-text" data-error="Add course image"></span>
  </div>

  <button class="btn btn-primary" type="submit">Add</button>
</form>
